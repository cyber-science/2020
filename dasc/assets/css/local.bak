/**
* #.# Additional Styles
*
* Unique styles for this template to change the header layout
*/

#header-site-id-alt {
	width: 100%;
	background: #1B365D;
	padding: 0 1em 0 2em;
	margin-top: 0;
	transition: all .1s ease-in;
	text-align: left;
	position: relative;
	height: 100%;
	display: flex !important;
	align-items: center;
}

#main-header #au-logo .full-logo {
	margin-top: 0;
	display: block !important;
}

#header-site-id-alt div h3 {
	font-size: 0.8em;
}

#header-site-id-alt div {
	margin-top: -0.4rem;
	color: white;
	font-size: 1em;
}

#main-header #au-logo {
	flex-shrink: 0;
	align-items: center;
	transition: all 0.3s ease-in;
	background: inherit;
	z-index: 9;
	height: 100%;
	z-index: 999;
	position: relative;
	margin-left: 0;
	left: 0;
	width: 140px !important;
	margin: 0 !important;
}

#au-right-nav {
	z-index: -1;
}

#main-header #au-logo .full-logo {
	display: flex !important;
	align-items: center;
}

#header-site-id-alt div h2,
#header-site-id-alt div h3 {
	margin: 0;
	color: white;
	font-weight: 400;
	position: relative;
	line-height: 1.5em;
}

#header-site-id-alt div h2 {
	font-size: 1em;
}

#header-site-id-alt div h3 {
	font-size: 0.80em;
}

#header-site-id-alt {
	display: block;
}

#main-navigation-container.at-top {
	padding-top: 110px;
}

/* Responsive style for small screens */
@media (max-width: 44em) {

	#header-site-id-alt {
		padding-left: 1em;
	}

	#main-header #au-logo {
		width: 80px !important;
		padding-left: 0.5em;
	}

	#au-right-nav {
		width: auto;
	}

	#header-site-id-alt div {
		padding: 0;
		display: flex;
		background: #1B365D;
		flex-flow: column;
		align-items: flex-start;
		justify-content: center;
		margin: auto;
		margin: 0;
		position: relative;
		width: 100%;
		height: 100%;
		margin-top: 0;
		padding: 0;
		font-size: 0.80em;
	}

	#header-site-id {
		width: 100%;
		flex-shrink: 1;
		background: $blue;
		padding: 0 1em 0.5em;
		padding: 3em 1em 1em;
		margin-top: -3em;
		display: none;
		transition: all .1s ease-in;
		text-align: center;
		position: relative;
		height: 100%;
	}
}